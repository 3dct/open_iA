{
  "interaction_profile": "/interaction_profiles/oculus/touch",

  "bindings": {
    "vtk-actions": {
      "sources": [
        {
          "inputs": {
            "pose": {
              "output": "handpose"
            }
          },
          "path": "/user/hand/left/input/aim"
        },
        {
          "inputs": {
            "pose": {
              "output": "handpose"
            }
          },
          "path": "/user/hand/right/input/aim"
        },
        {
          "inputs": {
            "click": {
              "output": "startmovement"
            },
            "position": {
              "output": "movement"
            }
          },
          "path": "/user/hand/right/input/joystick"
        },
        {
          "inputs": {
            "click": {
              "output": "trackpadleftclick"
            },
            "position": {
              "output": "trackpadleftmove"
            }
          },
          "path": "/user/hand/left/input/joystick"
        },
        {
          "inputs": {
            "click": {
              "output": "rightgripaction"
            }
          },
          "path": "/user/hand/right/input/squeeze"
        },
        {
          "inputs": {
            "click": {
              "output": "leftgripaction"
            }
          },
          "path": "/user/hand/left/input/squeeze"
        },
        {
          "inputs": {
            "click": {
              "output": "showmenu"
            }
          },
          "path": "/user/hand/right/input/a"
        },
        {
          "inputs": {
            "click": {
              "output": "showmenuleft"
            }
          },
          "path": "/user/hand/left/input/x"
        },
        {
          "inputs": {
            "click": {
              "output": "secondbuttonright"
            }
          },
          "path": "/user/hand/right/input/b"
        },
        {
          "inputs": {
            "click": {
              "output": "secondbuttonleft"
            }
          },
          "path": "/user/hand/left/input/y"
        },
        {
          "inputs": {
            "click": {
              "output": "nextcamerapose"
            }
          },
          "path": "/user/hand/left/input/trigger"
        },
        {
          "inputs": {
            "click": {
              "output": "^triggeraction"
            }
          },
          "path": "/user/hand/right/input/trigger"
        }
      ]
    }
  },
}
